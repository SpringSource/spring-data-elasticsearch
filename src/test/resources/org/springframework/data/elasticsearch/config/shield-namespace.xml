<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:elasticsearch="http://www.springframework.org/schema/data/elasticsearch"
       xsi:schemaLocation="http://www.springframework.org/schema/data/elasticsearch
        http://www.springframework.org/schema/data/elasticsearch/spring-elasticsearch-1.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <context:property-placeholder location="classpath:shield-namespace-test.properties"  />

    <elasticsearch:transport-client id="clientWithoutShield" />
    <elasticsearch:transport-client id="clientWithShieldUserOnlyNoSslNoKeystore" shield-user="${shieldUser}" />
    <elasticsearch:transport-client id="clientWithShieldUserAndSslNoKeystore" shield-user="${shieldUser}" shield-transport-ssl="true"/>

    <elasticsearch:transport-client id="clientWithAllShieldPropertiesExceptTruststore"
                                    shield-user="${shieldUser}"
                                    shield-transport-ssl="${shieldTransportSsl}"
                                    shield-ssl-keystore-path="/dev/null/keystorePath"
                                    shield-ssl-keystore-password="keystorePassword" />

    <elasticsearch:transport-client id="clientWithEmptyShieldProperties"
                                    shield-user="" shield-transport-ssl="" shield-ssl-keystore-path="" shield-ssl-keystore-password="" />

    <elasticsearch:transport-client id="clientWithAllShieldPropertiesExceptKeystore"
                                    shield-user="${shieldUser}"
                                    shield-transport-ssl="${shieldTransportSsl}"
                                    shield-ssl-truststore-path="/truststore/Path"
                                    shield-ssl-truststore-password="truststorePassword" />

</beans>